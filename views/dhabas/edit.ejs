<% layout("layouts/boilerplate")%>

    <style>
        .form-page {
            max-width: 700px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .form-page h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #222;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus,
        .form-group select:focus {
            outline: none;
            border-color: #FF385C;
            box-shadow: 0 0 0 3px rgba(255, 56, 92, 0.1);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .submit-btn {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(255, 56, 92, 0.3);
        }

        .current-image {
            margin-bottom: 1rem;
        }

        .current-image img {
            max-width: 300px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .current-image p {
            color: #666;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <div class="form-page">
        <h1>üçõ Edit Dhaba</h1>

        <form action="/dhabas/<%= dhaba._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Dhaba/Restaurant Name *</label>
                <input type="text" name="dhaba[title]" id="title" value="<%= dhaba.title %>" required>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="category">Category *</label>
                    <select name="dhaba[category]" id="category" required>
                        <option value="Dhaba" <%=dhaba.category==='Dhaba' ? 'selected' : '' %>>Dhaba</option>
                        <option value="Restaurant" <%=dhaba.category==='Restaurant' ? 'selected' : '' %>>Restaurant
                        </option>
                        <option value="Street Food" <%=dhaba.category==='Street Food' ? 'selected' : '' %>>Street Food
                        </option>
                        <option value="Tea Stall" <%=dhaba.category==='Tea Stall' ? 'selected' : '' %>>Tea Stall
                        </option>
                        <option value="Sweet Shop" <%=dhaba.category==='Sweet Shop' ? 'selected' : '' %>>Sweet Shop
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="priceRange">Price Range *</label>
                    <select name="dhaba[priceRange]" id="priceRange" required>
                        <option value="‚Çπ" <%=dhaba.priceRange==='‚Çπ' ? 'selected' : '' %>>‚Çπ (Budget)</option>
                        <option value="‚Çπ‚Çπ" <%=dhaba.priceRange==='‚Çπ‚Çπ' ? 'selected' : '' %>>‚Çπ‚Çπ (Moderate)</option>
                        <option value="‚Çπ‚Çπ‚Çπ" <%=dhaba.priceRange==='‚Çπ‚Çπ‚Çπ' ? 'selected' : '' %>>‚Çπ‚Çπ‚Çπ (Premium)</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="location">Location *</label>
                <input type="text" name="dhaba[location]" id="location" value="<%= dhaba.location %>" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="dhaba[description]" id="description" rows="4"><%= dhaba.description || '' %></textarea>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="open">Opening Time</label>
                    <input type="text" name="dhaba[timings][open]" id="open"
                        value="<%= dhaba.timings && dhaba.timings.open ? dhaba.timings.open : '6:00 AM' %>">
                </div>
                <div class="form-group">
                    <label for="close">Closing Time</label>
                    <input type="text" name="dhaba[timings][close]" id="close"
                        value="<%= dhaba.timings && dhaba.timings.close ? dhaba.timings.close : '11:00 PM' %>">
                </div>
            </div>

            <div class="form-group">
                <label for="contact">Contact Number</label>
                <input type="text" name="dhaba[contact]" id="contact" value="<%= dhaba.contact || '' %>">
            </div>

            <% if (dhaba.image && dhaba.image.url) { %>
                <div class="form-group current-image">
                    <label>Current Image</label>
                    <img src="<%= dhaba.image.url.replace('/upload/', '/upload/w_300,h_200,c_fill,q_auto,f_auto/') %>"
                        alt="Dhaba image">
                    <p>Upload a new image below to replace it</p>
                </div>
                <% } %>

                    <div class="form-group">
                        <label for="image">Upload New Image</label>
                        <input type="file" name="dhaba[image]" id="image" accept="image/*">
                    </div>

                    <button type="submit" class="submit-btn">Update Dhaba</button>
        </form>
    </div>