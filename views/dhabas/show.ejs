<% layout("layouts/boilerplate")%>

    <style>
        .dhaba-show {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .dhaba-header {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .dhaba-image {
            border-radius: 16px;
            overflow: hidden;
            height: 400px;
        }

        .dhaba-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .dhaba-info h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .dhaba-location {
            color: #717171;
            margin-bottom: 1rem;
        }

        .dhaba-meta {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .meta-item i {
            color: #FF385C;
        }

        .cuisine-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .cuisine-tag {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .dhaba-details {
            background: #f7f7f7;
            padding: 1.5rem;
            border-radius: 16px;
            margin-top: 1.5rem;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #ebebeb;
        }

        .detail-row:last-child {
            border-bottom: none;
        }

        .detail-label {
            color: #717171;
        }

        .detail-value {
            font-weight: 600;
        }

        .dhaba-description {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #ebebeb;
        }

        .dhaba-description h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .specialties {
            margin-top: 2rem;
        }

        .specialties h2 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .specialties-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .specialty-item {
            background: #FFF3CD;
            color: #856404;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.9rem;
        }

        .features-section {
            margin-top: 2rem;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem;
            background: #f7f7f7;
            border-radius: 8px;
        }

        .feature-item i {
            color: #00A699;
        }

        @media (max-width: 768px) {
            .dhaba-header {
                grid-template-columns: 1fr;
            }

            .dhaba-image {
                height: 300px;
            }
        }
    </style>

    <div class="dhaba-show">
        <a href="/dhabas"
            style="color: #FF385C; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
            <i class="fas fa-arrow-left"></i> Back to Dhabas
        </a>

        <div class="dhaba-header">
            <div class="dhaba-image">
                <img src="<%= dhaba.image && dhaba.image.url ? dhaba.image.url : 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=800' %>"
                    alt="<%= dhaba.title %>">
            </div>

            <div class="dhaba-info">
                <div style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem;">
                    <span
                        style="background: #FFE4E8; color: #FF385C; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.8rem;">
                        <%= dhaba.category %>
                    </span>
                    <% if(dhaba.verified) { %>
                        <span
                            style="background: #E6FAF8; color: #00A699; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.8rem;">
                            <i class="fas fa-check"></i> Verified
                        </span>
                        <% } %>
                </div>

                <h1>
                    <%= dhaba.title %>
                </h1>

                <p class="dhaba-location">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= dhaba.location %>
                </p>

                <div class="dhaba-meta">
                    <div class="meta-item">
                        <i class="fas fa-star"></i>
                        <span>
                            <%= dhaba.rating || '4.5' %> (<%= dhaba.reviewCount || 0 %> reviews)
                        </span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-rupee-sign"></i>
                        <span>
                            <%= dhaba.priceRange || '‚Çπ‚Çπ' %>
                        </span>
                    </div>
                </div>

                <% if(dhaba.cuisine && dhaba.cuisine.length> 0) { %>
                    <div class="cuisine-tags">
                        <% dhaba.cuisine.forEach(c=> { %>
                            <span class="cuisine-tag">
                                <%= c %>
                            </span>
                            <% }); %>
                    </div>
                    <% } %>

                        <div class="dhaba-details">
                            <div class="detail-row">
                                <span class="detail-label"><i class="fas fa-clock"></i> Timings</span>
                                <span class="detail-value">
                                    <%= dhaba.timings ? dhaba.timings.open : '6:00 AM' %> - <%= dhaba.timings ?
                                            dhaba.timings.close : '11:00 PM' %>
                                </span>
                            </div>
                            <% if(dhaba.contact) { %>
                                <div class="detail-row">
                                    <span class="detail-label"><i class="fas fa-phone"></i> Contact</span>
                                    <span class="detail-value">
                                        <%= dhaba.contact %>
                                    </span>
                                </div>
                                <% } %>
                        </div>

                        <!-- Reservation Form -->
                        <div
                            style="background: white; padding: 1.5rem; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); margin-top: 1.5rem;">
                            <h3 style="margin-bottom: 1rem; font-size: 1.25rem;">üìÖ Make a Reservation</h3>
                            <% if(currUser) { %>
                                <form action="/dhabas/<%= dhaba._id %>/book" method="POST">
                                    <div
                                        style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem; margin-bottom: 1rem;">
                                        <div>
                                            <label
                                                style="font-size: 0.75rem; color: #717171; display: block; margin-bottom: 0.25rem;">DATE</label>
                                            <input type="date" name="date" required
                                                style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 8px;"
                                                min="<%= new Date().toISOString().split('T')[0] %>">
                                        </div>
                                        <div>
                                            <label
                                                style="font-size: 0.75rem; color: #717171; display: block; margin-bottom: 0.25rem;">TIME</label>
                                            <select name="time" required
                                                style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 8px;">
                                                <option value="12:00 PM">12:00 PM</option>
                                                <option value="1:00 PM">1:00 PM</option>
                                                <option value="2:00 PM">2:00 PM</option>
                                                <option value="7:00 PM" selected>7:00 PM</option>
                                                <option value="8:00 PM">8:00 PM</option>
                                                <option value="9:00 PM">9:00 PM</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div style="margin-bottom: 1rem;">
                                        <label
                                            style="font-size: 0.75rem; color: #717171; display: block; margin-bottom: 0.25rem;">GUESTS</label>
                                        <select name="guests" required
                                            style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 8px;">
                                            <option value="1">1 Guest</option>
                                            <option value="2" selected>2 Guests</option>
                                            <option value="3">3 Guests</option>
                                            <option value="4">4 Guests</option>
                                            <option value="5">5 Guests</option>
                                            <option value="6">6+ Guests</option>
                                        </select>
                                    </div>
                                    <button type="submit"
                                        style="width: 100%; padding: 1rem; background: linear-gradient(135deg, #FF385C, #E31C5F); color: white; border: none; border-radius: 12px; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                                        Reserve a Table
                                    </button>
                                    <p
                                        style="text-align: center; margin-top: 0.75rem; color: #717171; font-size: 0.875rem;">
                                        ‚Çπ100 reservation fee (adjustable against bill)
                                    </p>
                                </form>
                                <% } else { %>
                                    <a href="/login"
                                        style="display: block; width: 100%; padding: 1rem; background: linear-gradient(135deg, #FF385C, #E31C5F); color: white; text-align: center; text-decoration: none; border-radius: 12px; font-size: 1.1rem; font-weight: 600;">
                                        Login to Reserve
                                    </a>
                                    <% } %>
                        </div>
            </div>
        </div>

        <% if(dhaba.description) { %>
            <div class="dhaba-description">
                <h2>About this Place</h2>
                <p>
                    <%= dhaba.description %>
                </p>
            </div>
            <% } %>

                <% if(dhaba.specialties && dhaba.specialties.length> 0) { %>
                    <div class="specialties">
                        <h2>üçΩÔ∏è Must Try Dishes</h2>
                        <div class="specialties-list">
                            <% dhaba.specialties.forEach(item=> { %>
                                <span class="specialty-item">
                                    <%= item %>
                                </span>
                                <% }); %>
                        </div>
                    </div>
                    <% } %>

                        <% if(dhaba.features && dhaba.features.length> 0) { %>
                            <div class="features-section">
                                <h2>Amenities</h2>
                                <div class="features-grid">
                                    <% dhaba.features.forEach(feature=> { %>
                                        <div class="feature-item">
                                            <i class="fas fa-check-circle"></i>
                                            <span>
                                                <%= feature %>
                                            </span>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                            <% } %>

                                <% if(dhaba.owner) { %>
                                    <div
                                        style="margin-top: 2rem; padding: 1.5rem; background: #f7f7f7; border-radius: 16px;">
                                        <h3 style="margin-bottom: 1rem;">Listed by</h3>
                                        <div style="display: flex; align-items: center; gap: 1rem;">
                                            <div
                                                style="width: 50px; height: 50px; background: linear-gradient(135deg, #FF9800, #F44336); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 1.25rem;">
                                                <%= dhaba.owner.username.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <p style="font-weight: 600; margin: 0;">
                                                    <%= dhaba.owner.username %>
                                                </p>
                                                <p style="color: #717171; font-size: 0.875rem; margin: 0;">Local Food
                                                    Expert</p>
                                            </div>
                                        </div>

                                        <% if(currUser && dhaba.owner._id.equals(currUser._id)) { %>
                                            <div
                                                style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #ddd; display: flex; gap: 1rem;">
                                                <a href="/dhabas/<%= dhaba._id %>/edit"
                                                    style="flex: 1; padding: 0.75rem 1.5rem; background: #222; color: white; text-align: center; text-decoration: none; border-radius: 8px; font-weight: 600; transition: all 0.3s ease;">
                                                    <i class="fas fa-edit"></i> Edit Dhaba
                                                </a>
                                                <form method="POST" action="/dhabas/<%= dhaba._id %>?_method=DELETE"
                                                    style="flex: 1;">
                                                    <button type="submit"
                                                        style="width: 100%; padding: 0.75rem 1.5rem; background: #FF385C; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;"
                                                        onclick="return confirm('Are you sure you want to delete this dhaba?');">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>

                                        <!-- Map Section -->
                                        <div
                                            style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #ebebeb;">
                                            <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem;">Find
                                                Us Here</h2>
                                            <p style="color: #717171; margin-bottom: 1rem;">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <%= dhaba.location %>
                                            </p>
                                            <div id="map" style="height: 350px; border-radius: 16px; overflow: hidden;">
                                            </div>
                                        </div>
    </div>

    <script>
        const maptoken = "<%= mapBoxToken || '' %>";
        const dhaba = <% - JSON.stringify(dhaba) %>;
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mapContainer = document.getElementById('map');
            if (!mapContainer) return;

            if (!maptoken) {
                mapContainer.innerHTML = '<p style="padding: 2rem; text-align: center; color: #717171;">Map unavailable - Token not configured</p>';
                return;
            }

            if (!dhaba.geometry || !dhaba.geometry.coordinates) {
                mapContainer.innerHTML = '<p style="padding: 2rem; text-align: center; color: #717171;">Location not available for this restaurant</p>';
                return;
            }

            try {
                mapboxgl.accessToken = maptoken;
                const [lng, lat] = dhaba.geometry.coordinates;

                const map = new mapboxgl.Map({
                    container: 'map',
                    style: 'mapbox://styles/mapbox/streets-v12',
                    center: [lng, lat],
                    zoom: 14
                });

                map.addControl(new mapboxgl.NavigationControl(), 'top-right');

                new mapboxgl.Marker({ color: '#D2691E' })
                    .setLngLat([lng, lat])
                    .setPopup(
                        new mapboxgl.Popup({ offset: 25 })
                            .setHTML(`
                                <div style="padding: 0.5rem;">
                                    <h4 style="margin: 0 0 0.5rem; font-weight: 600;">${dhaba.title}</h4>
                                    <p style="margin: 0; color: #717171; font-size: 0.875rem;">${dhaba.location}</p>
                                    <p style="margin: 0.5rem 0 0; font-size: 0.75rem; color: #D2691E;">üçΩÔ∏è ${dhaba.category || 'Dhaba'}</p>
                                </div>
                            `)
                    )
                    .addTo(map);
            } catch (error) {
                console.error('Map error:', error);
                mapContainer.innerHTML = '<p style="padding: 2rem; text-align: center; color: #717171;">Unable to load map</p>';
            }
        });
    </script>