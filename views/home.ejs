<% layout("layouts/boilerplate") %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero__content">
            <h1 class="hero__title">Discover Extraordinary Stays</h1>
            <p class="hero__subtitle">
                Experience world-class comfort in handpicked luxury destinations.
            </p>
            <a href="/listings" class="hero__btn">Explore Now</a>
        </div>
    </section>

    <!-- Experiences Section -->
    <section class="luxury-section">
        <div class="luxury-section-header">
            <p class="luxury-section-header__eyebrow">Curated Experiences</p>
            <h2 class="luxury-section-header__title">Unforgettable Moments</h2>
        </div>

        <div class="experience-grid">

            <div class="experience-card">
                <div class="experience-card__icon">
                    <i class="fas fa-spa"></i>
                </div>
                <h3 class="experience-card__title">Luxury Retreats</h3>
                <p class="experience-card__description">
                    Relax in serene spaces designed for ultimate comfort and elegance.
                </p>
            </div>

            <div class="experience-card">
                <div class="experience-card__icon">
                    <i class="fas fa-mountain"></i>
                </div>
                <h3 class="experience-card__title">Adventure Escapes</h3>
                <p class="experience-card__description">
                    Discover thrilling destinations surrounded by breathtaking nature.
                </p>
            </div>

            <div class="experience-card">
                <div class="experience-card__icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <h3 class="experience-card__title">Culinary Discoveries</h3>
                <p class="experience-card__description">
                    Experience authentic dining at world-class restaurants.
                </p>
            </div>

        </div>
    </section>

    <!-- Featured Accommodations -->
    <section class="accommodations-section">
        <div class="accommodations-header">
            <div class="accommodations-header__left">
                <div class="luxury-section-header" style="text-align: left; margin-bottom: 0;">
                    <p class="luxury-section-header__eyebrow">Featured Stays</p>
                    <h2 class="luxury-section-header__title">Exceptional Accommodations</h2>
                </div>
            </div>
            <a href="/listings" class="view-all-link">
                View All <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <div class="accommodations-scroll">
            <% if(allListings && allListings.length> 0) { %>

                <% allListings.forEach(listing=> { %>
                    <a href="/listings/<%= listing._id %>" class="luxury-card">
                        <div class="luxury-card__image">
                            <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1566073771259-6a8506099945?w=600' %>"
                                alt="<%= listing.title %>">
                            <div class="luxury-card__overlay"></div>

                            <% if(listing.instantBook) { %>
                                <span class="luxury-card__badge">Featured</span>
                                <% } %>

                                    <div class="luxury-card__content">
                                        <p class="luxury-card__location">
                                            <%= listing.location %>, <%= listing.country %>
                                        </p>

                                        <h3 class="luxury-card__title">
                                            <%= listing.title %>
                                        </h3>

                                        <div class="luxury-card__details">
                                            <span class="luxury-card__price">
                                                â‚¹<%= listing.price.toLocaleString("en-IN") %>
                                                    <small>/ night</small>
                                            </span>

                                            <span class="luxury-card__rating">
                                                <i class="fas fa-star"></i> 4.9
                                            </span>
                                        </div>
                                    </div>
                        </div>
                    </a>
                    <% }); %>

                        <% } else { %>

                            <p style="text-align:center; padding: 3rem; color: gray;">
                                No listings available yet.
                            </p>

                            <% } %>
        </div>
    </section>