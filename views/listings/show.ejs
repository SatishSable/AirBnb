<% layout("layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3"> 
<body>
    <h3><%=listing.title%> </h3>
 </div>
    <div class="card col-6 offset-3 show-card" >
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-title">
        <%=listing.description%> <br>
        &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
        <%=listing.location%> <br>
        <%=listing.country%>
    </p>
   
  </div>
</div>

   
    <br>
   
</body>

</div>
<hr>
 <div class="btns mb-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn"> Edit </a>
 
   
    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn btn-dark  offset-5">Delete </button>
       
    </form>
    </div class=mb-3>
    <div class="col-8 offset-2">
      <h4>Leave a Review</h4>
    <form action="/listings/ <%= listing.id%>/Reviews" method="POST">
      <div class="mb-3 mt-3">
        <lable for = "rating" class="form-label">Rating</lable>
        <input type="range" min="1" max="5" id="rating" name="Review[rating]" class="form-range">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment"> Comment</label>
        <textarea name="Review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
      </div>
  
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    </div>
