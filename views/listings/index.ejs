<% layout("layouts/boilerplate")%>

<style>
  #filters {
   display: flex;
   flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    margin-right: 1.5rem;
    margin-top: 0.7rem;
    opacity: 0.8;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;    
  }
  .filter p {
    font-size: 0.5rem;
  }

  .tax-info {
    display: none;
  }
  .tax-toggle{
    border : 1px solid black;
    padding: 0.5rem;
    border-radius: 0.5rem;
    align-items: center;
    height: 3rem;
    text-align: center;
  }
</style>
<div id="filters" class="d-flex flex-wrap justify-content-center gap-4 mt-3">
  <div class="filter text-center">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Room</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-water-ladder"></i></div>
    <p>Amazing Pool</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>

  <div class="filter text-center">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
</div>

  </div>
</div>

   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 px-0 " >
    <%for(let listing of allListings ) {%>
      <a href="/listings/<%= listing._id%>" class="listing-link" style="text-decoration: none; color: inherit;">
    <div class="card col listing-card" style="width: 20rem;">
  <img src="<%= listing.image.url %>" 
       class="card-img-top" 
       alt="listing_image"
       style="height: 20rem;">
     <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
     <b> <%= listing.title %> </b><br>
     â‚¹ <%= listing.price.toLocaleString("en-IN")  %> / night
     <i class="tax-info">&nbsp; &nbsp;+ 18% GST</i>
    </p>
    <br>
    
  </div>
</div>
</a>
<%}%>
   </div>

<script>
  let taxToggle = document.getElementById('switchCheckDefault');
  taxToggle.addEventListener('click', function() {
   let taxInfo = document.getElementsByClassName('tax-info');
   for(info of taxInfo) {
    if(taxToggle.checked) {
      info.style.display = 'inline';
    } else {
      info.style.display = 'none';
    }
   }
  })
</script>