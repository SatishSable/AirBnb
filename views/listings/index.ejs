<% layout("layouts/boilerplate")%>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Plus+Jakarta+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=Bebas+Neue&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

<style>
    /* ===================================
       LUXURY STAYS PAGE - FOUR SEASONS
       =================================== */
    
    :root {
        --luxury-dark: #1a1a1a;
        --luxury-gold: #c9a227;
        --luxury-gold-light: #d4b84a;
        --luxury-cream: #f8f6f3;
        --luxury-text: #333;
        --luxury-text-light: #666;
        --font-serif: 'Playfair Display', Georgia, serif;
        --font-elegant: 'Cormorant Garamond', Georgia, serif;
        --font-sans: 'Plus Jakarta Sans', sans-serif;
        --font-display: 'Bebas Neue', cursive;
        --font-body: 'Montserrat', sans-serif;
    }

    /* Remove default container padding for full-width hero */
    .container {
        max-width: 100%;
        padding: 0;
    }

    /* ===================================
       VIDEO HERO SECTION
       =================================== */
    
    .stays-hero {
        position: relative;
        width: 100vw;
        height: 100vh;
        margin-left: calc(-50vw + 50%);
        margin-top: -1rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stays-hero__video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
        z-index: 1;
    }

    .stays-hero__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.4) 0%,
            rgba(0, 0, 0, 0.5) 50%,
            rgba(0, 0, 0, 0.6) 100%
        );
        z-index: 2;
    }

    .stays-hero__content {
        position: relative;
        z-index: 3;
        text-align: center;
        color: white;
        padding: 2rem;
        max-width: 800px;
    }

    .stays-hero__eyebrow {
        font-family: var(--font-sans);
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--luxury-gold-light);
        margin-bottom: 1.5rem;
    }

    .stays-hero__title {
        font-family: var(--font-serif);
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 400;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .stays-hero__subtitle {
        font-family: var(--font-elegant);
        font-size: 1.1rem;
        font-weight: 300;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* Hero Buttons */
    .hero-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 2rem;
    }

    .stays-hero__btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2.5rem;
        font-family: var(--font-sans);
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        background: transparent;
        color: white !important;
        border: 1px solid rgba(255, 255, 255, 0.6);
    }

    .stays-hero__content a.stays-hero__btn:hover {
        background: white !important;
        color: #1a1a2e !important;
        border-color: white !important;
    }

    .stays-hero__btn i {
        font-size: 0.7rem;
        transition: transform 0.3s ease;
    }

    .stays-hero__btn:hover i {
        transform: translateX(4px);
    }

    /* ===================================
       LUXURY SEARCH BAR
       =================================== */
    
    .search-section {
        max-width: 1000px;
        margin: -3rem auto 3rem;
        background: white;
        padding: 0;
        border-radius: 0;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        position: relative;
        z-index: 10;
    }

    .search-section:hover {
        transform: none;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    }

    .search-bar {
        display: flex;
        align-items: stretch;
    }

    .search-bar__field {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1.25rem 1.5rem;
        border-right: 1px solid #e5e5e5;
        flex: 1;
        min-width: 0;
    }

    .search-bar__field:last-of-type {
        border-right: none;
    }

    .search-bar__field.location {
        flex: 2;
    }

    .search-bar__label {
        font-family: var(--font-sans);
        font-size: 0.65rem;
        font-weight: 600;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--luxury-dark);
        margin-bottom: 0.5rem;
    }

    .search-bar__input {
        font-family: var(--font-sans);
        font-size: 0.9rem;
        color: var(--luxury-text-light);
        border: none;
        outline: none;
        background: transparent;
        width: 100%;
        padding: 0;
    }

    .search-bar__input::placeholder {
        color: #999;
    }

    .search-bar__input[type="date"] {
        cursor: pointer;
    }

    .search-bar__input[type="number"] {
        -moz-appearance: textfield;
        appearance: textfield;
    }

    .search-bar__input[type="number"]::-webkit-outer-spin-button,
    .search-bar__input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        appearance: none;
    }

    .search-bar__submit {
        background: var(--luxury-dark);
        color: white;
        border: none;
        padding: 1.25rem 2.5rem;
        font-family: var(--font-sans);
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        cursor: pointer;
        transition: background 0.3s ease;
        white-space: nowrap;
    }

    .search-bar__submit:hover {
        background: #333;
    }

    /* ===================================
       SECTION DIVIDER
       =================================== */
    
    .section-divider {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 3rem 0;
    }

    .section-divider__line {
        width: 60px;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--luxury-gold), transparent);
    }

    .section-divider__icon {
        color: var(--luxury-gold);
        font-size: 0.9rem;
    }

    /* ===================================
       LISTINGS HEADER
       =================================== */
    
    .listings-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 0 2rem;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    .listings-header__title {
        font-family: var(--font-serif);
        font-size: 1.75rem;
        font-weight: 400;
        color: var(--luxury-dark);
    }

    .listings-header__count {
        font-family: var(--font-sans);
        font-size: 0.85rem;
        color: var(--luxury-text-light);
        margin-top: 0.25rem;
    }

    .sort-options {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

    .sort-options label {
        font-family: var(--font-sans);
        font-size: 0.8rem;
        color: var(--luxury-text-light);
    }

    .sort-options select {
        padding: 0.6rem 1rem;
        border: 1px solid #ddd;
        border-radius: 0;
        font-family: var(--font-sans);
        font-size: 0.85rem;
        background: white;
        cursor: pointer;
    }

    /* ===================================
       LUXURY PROPERTY CARDS
       =================================== */
    
    .properties-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        padding: 0 2rem 4rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .property-card {
        background: white;
        border-radius: 0;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .property-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .property-card__image-wrapper {
        position: relative;
        overflow: hidden;
        aspect-ratio: 4/3;
    }

    .property-card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .property-card:hover .property-card__image {
        transform: scale(1.08);
    }

    .property-card__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.4) 0%,
            transparent 50%
        );
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .property-card:hover .property-card__overlay {
        opacity: 1;
    }

    .property-card__wishlist {
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 36px;
        height: 36px;
        background: rgba(255, 255, 255, 0.95);
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 5;
    }

    .property-card__wishlist:hover {
        transform: scale(1.1);
        background: white;
    }

    .property-card__wishlist i {
        color: #666;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

    .property-card__wishlist.active i {
        color: #e74c3c;
    }

    .property-card__badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: var(--luxury-gold);
        color: white;
        padding: 0.4rem 0.8rem;
        font-family: var(--font-sans);
        font-size: 0.65rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        z-index: 5;
    }

    .property-card__content {
        padding: 1.5rem;
    }

    .property-card__location {
        font-family: var(--font-sans);
        font-size: 0.7rem;
        font-weight: 600;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--luxury-gold);
        margin-bottom: 0.5rem;
    }

    .property-card__title {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        font-weight: 400;
        color: var(--luxury-dark);
        margin-bottom: 0.75rem;
        line-height: 1.3;
    }

    .property-card__details {
        font-family: var(--font-sans);
        font-size: 0.85rem;
        color: var(--luxury-text-light);
        margin-bottom: 1rem;
    }

    .property-card__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }

    .property-card__price {
        font-family: var(--font-sans);
        font-size: 1rem;
        font-weight: 600;
        color: var(--luxury-dark);
    }

    .property-card__price span {
        font-weight: 400;
        font-size: 0.85rem;
        color: var(--luxury-text-light);
    }

    .property-card__tax {
        font-family: var(--font-sans);
        font-size: 0.75rem;
        color: #999;
        display: none;
    }

    .property-card__rating {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        font-family: var(--font-sans);
        font-size: 0.85rem;
        color: var(--luxury-dark);
    }

    .property-card__rating i {
        color: var(--luxury-gold);
        font-size: 0.8rem;
    }

    /* ===================================
       RESPONSIVE DESIGN
       =================================== */
    
    @media (max-width: 992px) {
        .search-bar {
            flex-wrap: wrap;
        }
        
        .search-bar__field {
            flex: 1 1 calc(50% - 1px);
            border-bottom: 1px solid #e5e5e5;
        }
        
        .search-bar__field.location {
            flex: 1 1 100%;
        }
        
        .search-bar__submit {
            flex: 1 1 100%;
        }
        
        .properties-grid {
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        }
    }

    @media (max-width: 768px) {
        .stays-hero {
            height: 50vh;
            min-height: 400px;
        }
        
        .search-bar__field {
            flex: 1 1 100%;
        }
        
        .listings-header {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
        
        .properties-grid {
            grid-template-columns: 1fr;
            padding: 0 1rem 3rem;
        }
    }
</style>

<!-- Video Hero Section -->
