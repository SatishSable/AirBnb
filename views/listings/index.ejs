    </div>
</section>

<!-- Luxury Search Bar -->
<div class="booking-bar-wrapper" style="position: relative; margin: -3rem auto 3rem; max-width: 1000px; z-index: 10;">
    <form class="booking-bar" action="/listings/search" method="GET" style="background: white; display: flex; align-items: stretch; justify-content: flex-start; padding: 0; position: relative; box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);">
        <!-- Destination Field -->
        <div class="booking-bar__field location" style="display: flex; flex-direction: column; justify-content: center; padding: 1.25rem 1.75rem; border-right: 1px solid #e5e5e5; min-width: 200px; cursor: pointer; transition: background 0.3s ease; position: relative;">
            <label class="booking-bar__label" style="font-family: var(--font-sans); font-size: 0.7rem; font-weight: 600; letter-spacing: 0.12em; text-transform: uppercase; color: #1a1a1a; margin-bottom: 0.5rem;">Destination</label>
            <input type="text" class="booking-bar__input" name="location" placeholder="Where would you like to stay?" style="font-family: var(--font-sans); font-size: 0.9rem; color: #666; border: none; outline: none; background: transparent; width: 100%; cursor: text; position: relative; z-index: 5; padding: 0;">
        </div>
        
        <!-- Check In Field -->
        <div class="booking-bar__field checkin" style="display: flex; flex-direction: column; justify-content: center; padding: 1.25rem 1.75rem; border-right: 1px solid #e5e5e5; min-width: 160px; cursor: pointer; transition: background 0.3s ease; position: relative;">
            <label class="booking-bar__label" style="font-family: var(--font-sans); font-size: 0.7rem; font-weight: 600; letter-spacing: 0.12em; text-transform: uppercase; color: #1a1a1a; margin-bottom: 0.5rem;">Check In</label>
            <input type="date" class="booking-bar__input" name="checkIn" min="<%= new Date().toISOString().split('T')[0] %>" style="font-family: var(--font-sans); font-size: 0.9rem; color: #666; border: none; outline: none; background: transparent; cursor: pointer; padding: 0; position: relative; z-index: 5;">
        </div>
        
        <!-- Check Out Field -->
        <div class="booking-bar__field checkout" style="display: flex; flex-direction: column; justify-content: center; padding: 1.25rem 1.75rem; border-right: 1px solid #e5e5e5; min-width: 160px; cursor: pointer; transition: background 0.3s ease; position: relative;">
            <label class="booking-bar__label" style="font-family: var(--font-sans); font-size: 0.7rem; font-weight: 600; letter-spacing: 0.12em; text-transform: uppercase; color: #1a1a1a; margin-bottom: 0.5rem;">Check Out</label>
            <input type="date" class="booking-bar__input" name="checkOut" min="<%= new Date().toISOString().split('T')[0] %>" style="font-family: var(--font-sans); font-size: 0.9rem; color: #666; border: none; outline: none; background: transparent; cursor: pointer; padding: 0; position: relative; z-index: 5;">
        </div>
        
        <!-- Guests Field -->
        <div class="booking-bar__field guests" style="display: flex; flex-direction: column; justify-content: center; padding: 1.25rem 1.75rem; border-right: 1px solid #e5e5e5; min-width: 220px; cursor: pointer; transition: background 0.3s ease; position: relative;">
            <label class="booking-bar__label" style="font-family: var(--font-sans); font-size: 0.7rem; font-weight: 600; letter-spacing: 0.12em; text-transform: uppercase; color: #1a1a1a; margin-bottom: 0.5rem;">Guests</label>
            <input type="number" class="booking-bar__input" name="guests" min="1" max="20" value="2" placeholder="Number of guests" style="font-family: var(--font-sans); font-size: 0.9rem; color: #666; border: none; outline: none; background: transparent; width: 100%; cursor: text; position: relative; z-index: 5; padding: 0; -moz-appearance: textfield; appearance: textfield;">
        </div>
        
        <!-- Submit Button -->
        <button type="submit" class="booking-bar__submit" style="background: #1a1a1a; color: white; border: none; padding: 1.25rem 2.5rem; font-family: var(--font-sans); font-size: 0.75rem; font-weight: 600; letter-spacing: 0.15em; text-transform: uppercase; cursor: pointer; transition: background 0.3s ease; white-space: nowrap;">
            <i class="fas fa-search"></i> Search
        </button>
    </form>
</div>

<!-- Section Divider -->
<div class="section-divider">
    <div class="section-divider__line"></div>
    <i class="section-divider__icon fas fa-gem"></i>
    <div class="section-divider__line"></div>
</div>

<!-- Listings Header -->
<div class="listings-header">
    <div>
        <h2 class="listings-header__title">Our Properties</h2>
        <p class="listings-header__count">
            <span id="listingsCount"><%= allListings.length %></span> exceptional stays available
        </p>
    </div>
    <div class="sort-options">
        <label for="sortBy">Sort by:</label>
        <select id="sortBy" class="form-select">
            <option value="recommended">Recommended</option>
            <option value="priceLow">Price: Low to High</option>
            <option value="priceHigh">Price: High to Low</option>
            <option value="rating">Highest Rated</option>
        </select>
    </div>
</div>

<!-- Properties Grid -->
<div class="properties-grid" id="listingsGrid">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="property-card" 
           data-category="<%= listing.category || 'Trending' %>">
            <div class="property-card__image-wrapper">
                <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1566073771259-6a8506099945?w=600' %>" 
                     class="property-card__image" alt="<%= listing.title %>">
                <div class="property-card__overlay"></div>
                
                <!-- Wishlist Button -->
                <button class="property-card__wishlist" 
                        onclick="event.preventDefault(); event.stopPropagation(); toggleWishlist('<%= listing._id %>', this)">
                    <i class="far fa-heart"></i>
                </button>
                
                <% if(listing.instantBook) { %>
                    <span class="property-card__badge">Featured</span>
                <% } %>
            </div>
            
            <div class="property-card__content">
                <p class="property-card__location">
                    <%= listing.location %>, <%= listing.country %>
                </p>
                <h3 class="property-card__title"><%= listing.title %></h3>
                
                <% if(listing.guests || listing.bedrooms || listing.beds) { %>
                    <p class="property-card__details">
                        <% if(listing.guests) { %><%= listing.guests %> guests<% } %>
                        <% if(listing.bedrooms) { %> · <%= listing.bedrooms %> bedrooms<% } %>
                        <% if(listing.beds) { %> · <%= listing.beds %> beds<% } %>
                    </p>
                <% } %>
                
                <div class="property-card__footer">
                    <div>
                        <span class="property-card__price">
                            ₹<%= listing.price.toLocaleString("en-IN") %>
                            <span>/ night</span>
                        </span>
                        <span class="property-card__tax tax-info"> + 18% GST</span>
                    </div>
                    
                    <% if(listing.reviews && listing.reviews.length > 0) { %>
                        <span class="property-card__rating">
                            <i class="fas fa-star"></i> 4.8
                        </span>
                    <% } %>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    // Tax Toggle
    const taxToggle = document.getElementById('switchCheckDefault');
    if (taxToggle) {
        taxToggle.addEventListener('click', function() {
            const taxInfo = document.getElementsByClassName('tax-info');
            for (let info of taxInfo) {
                info.style.display = this.checked ? 'inline' : 'none';
            }
        });
    }

    // Sort Functionality
    const sortSelect = document.getElementById('sortBy');
    const listingsGrid = document.getElementById('listingsGrid');
    const propertyCards = document.querySelectorAll('.property-card');

    if (sortSelect && listingsGrid) {
        sortSelect.addEventListener('change', function() {
            const sortBy = this.value;
            const cards = Array.from(propertyCards);

            cards.sort((a, b) => {
                const priceA = parseInt(a.querySelector('.property-card__price').textContent.replace(/[₹,]/g, ''));
                const priceB = parseInt(b.querySelector('.property-card__price').textContent.replace(/[₹,]/g, ''));

                switch (sortBy) {
                    case 'priceLow':
                        return priceA - priceB;
                    case 'priceHigh':
                        return priceB - priceA;
                    case 'rating':
                        return Math.random() - 0.5;
                    default:
                        return 0;
                }
            });

            cards.forEach(card => listingsGrid.appendChild(card));
        });
    }

    // Wishlist Functionality
    function toggleWishlist(listingId, btn) {
        const icon = btn.querySelector('i');

        if (icon.classList.contains('far')) {
            icon.classList.remove('far');
            icon.classList.add('fas');
            btn.classList.add('active');

            let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            if (!wishlist.includes(listingId)) {
                wishlist.push(listingId);
                localStorage.setItem('wishlist', JSON.stringify(wishlist));
            }
        } else {
            icon.classList.remove('fas');
            icon.classList.add('far');
            btn.classList.remove('active');

            let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            wishlist = wishlist.filter(id => id !== listingId);
            localStorage.setItem('wishlist', JSON.stringify(wishlist));
        }
    }

    // Load wishlist on page load
    document.addEventListener('DOMContentLoaded', function() {
        const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');

        wishlist.forEach(listingId => {
            const card = document.querySelector(`a[href="/listings/${listingId}"]`);
            if (card) {
                const btn = card.querySelector('.property-card__wishlist');
                if (btn) {
                    const icon = btn.querySelector('i');
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                    btn.classList.add('active');
                }
            }
        });
    });

    // Fade-in animation for cards
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, { threshold: 0.1 });

    propertyCards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = `all 0.5s ease ${index * 0.1}s`;
        observer.observe(card);
    });
</script>