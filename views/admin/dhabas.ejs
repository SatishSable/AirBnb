<% layout("layouts/boilerplate") %>

    <style>
        .admin-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #FF385C;
        }

        .admin-header h1 {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .admin-nav {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .admin-nav a {
            padding: 0.75rem 1.5rem;
            background: #f7f7f7;
            border-radius: 8px;
            text-decoration: none;
            color: #222;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .admin-nav a:hover,
        .admin-nav a.active {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
        }

        .data-table {
            width: 100%;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .data-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th {
            background: #f7f7f7;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #222;
            border-bottom: 2px solid #ebebeb;
        }

        .data-table td {
            padding: 1rem;
            border-bottom: 1px solid #ebebeb;
            vertical-align: middle;
        }

        .data-table tr:hover {
            background: #f9f9f9;
        }

        .item-cell {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .item-image {
            width: 60px;
            height: 40px;
            border-radius: 6px;
            object-fit: cover;
        }

        .action-btns {
            display: flex;
            gap: 0.5rem;
        }

        .action-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .action-btn.view {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .action-btn.delete {
            background: #FFEBEE;
            color: #C62828;
        }

        .action-btn:hover {
            transform: scale(1.05);
        }
    </style>

    <div class="admin-container">
        <div class="admin-header">
            <h1><i class="fas fa-utensils"></i> Dhabas Management</h1>
            <span style="color: #717171;">
                <%= dhabas.length %> dhabas
            </span>
        </div>

        <nav class="admin-nav">
            <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/admin/users"><i class="fas fa-users"></i> Users</a>
            <a href="/admin/listings"><i class="fas fa-building"></i> Listings</a>
            <a href="/admin/vehicles"><i class="fas fa-car"></i> Vehicles</a>
            <a href="/admin/dhabas" class="active"><i class="fas fa-utensils"></i> Dhabas</a>
            <a href="/admin/bookings"><i class="fas fa-calendar-check"></i> Bookings</a>
        </nav>

        <div class="data-table">
            <table>
                <thead>
                    <tr>
                        <th>Dhaba</th>
                        <th>Category</th>
                        <th>Location</th>
                        <th>Price Range</th>
                        <th>Owner</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% dhabas.forEach(dhaba=> { %>
                        <tr>
                            <td>
                                <div class="item-cell">
                                    <img src="<%= dhaba.image && dhaba.image.url ? dhaba.image.url : 'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=100' %>"
                                        alt="<%= dhaba.title %>" class="item-image">
                                    <span>
                                        <%= dhaba.title %>
                                    </span>
                                </div>
                            </td>
                            <td>
                                <%= dhaba.category %>
                            </td>
                            <td>
                                <%= dhaba.location %>
                            </td>
                            <td>
                                <%= dhaba.priceRange || '₹₹' %>
                            </td>
                            <td>
                                <%= dhaba.owner ? dhaba.owner.username : 'Unknown' %>
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a href="/dhabas/<%= dhaba._id %>" class="action-btn view">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <form action="/admin/dhabas/<%= dhaba._id %>?_method=DELETE" method="POST"
                                        style="display: inline;">
                                        <button type="submit" class="action-btn delete"
                                            onclick="return confirm('Are you sure you want to delete this dhaba?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>