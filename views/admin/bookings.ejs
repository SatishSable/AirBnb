<% layout("layouts/boilerplate") %>

    <style>
        .admin-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #FF385C;
        }

        .admin-header h1 {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .admin-nav {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .admin-nav a {
            padding: 0.75rem 1.5rem;
            background: #f7f7f7;
            border-radius: 8px;
            text-decoration: none;
            color: #222;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .admin-nav a:hover,
        .admin-nav a.active {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
        }

        .data-table {
            width: 100%;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .data-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th {
            background: #f7f7f7;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #222;
            border-bottom: 2px solid #ebebeb;
        }

        .data-table td {
            padding: 1rem;
            border-bottom: 1px solid #ebebeb;
            vertical-align: middle;
        }

        .data-table tr:hover {
            background: #f9f9f9;
        }

        .badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .badge-confirmed {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .badge-pending {
            background: #FFF3E0;
            color: #E65100;
        }

        .badge-cancelled {
            background: #FFEBEE;
            color: #C62828;
        }

        .action-btns {
            display: flex;
            gap: 0.5rem;
        }

        .action-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .action-btn.delete {
            background: #FFEBEE;
            color: #C62828;
        }

        .action-btn:hover {
            transform: scale(1.05);
        }

        .status-select {
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 0.85rem;
        }

        .booking-type {
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.7rem;
            font-weight: 500;
        }

        .booking-type.listing {
            background: #E3F2FD;
            color: #1976D2;
        }

        .booking-type.vehicle {
            background: #E0F2F1;
            color: #00796B;
        }

        .booking-type.dhaba {
            background: #FFF3E0;
            color: #E65100;
        }
    </style>

    <div class="admin-container">
        <div class="admin-header">
            <h1><i class="fas fa-calendar-check"></i> Bookings Management</h1>
            <span style="color: #717171;">
                <%= bookings.length %> bookings
            </span>
        </div>

        <nav class="admin-nav">
            <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/admin/users"><i class="fas fa-users"></i> Users</a>
            <a href="/admin/listings"><i class="fas fa-building"></i> Listings</a>
            <a href="/admin/vehicles"><i class="fas fa-car"></i> Vehicles</a>
            <a href="/admin/dhabas"><i class="fas fa-utensils"></i> Dhabas</a>
            <a href="/admin/bookings" class="active"><i class="fas fa-calendar-check"></i> Bookings</a>
        </nav>

        <div class="data-table">
            <table>
                <thead>
                    <tr>
                        <th>Booking</th>
                        <th>Type</th>
                        <th>User</th>
                        <th>Dates</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking=> { %>
                        <tr>
                            <td>
                                <% if (booking.listing) { %>
                                    <%= booking.listing.title %>
                                        <% } else if (booking.vehicle) { %>
                                            <%= booking.vehicle.title %>
                                                <% } else if (booking.dhaba) { %>
                                                    <%= booking.dhaba.title %>
                                                        <% } else { %>
                                                            Unknown
                                                            <% } %>
                            </td>
                            <td>
                                <% if (booking.listing) { %>
                                    <span class="booking-type listing">Listing</span>
                                    <% } else if (booking.vehicle) { %>
                                        <span class="booking-type vehicle">Vehicle</span>
                                        <% } else if (booking.dhaba) { %>
                                            <span class="booking-type dhaba">Dhaba</span>
                                            <% } %>
                            </td>
                            <td>
                                <%= booking.user ? booking.user.username : 'Unknown' %>
                            </td>
                            <td>
                                <% if (booking.checkIn) { %>
                                    <%= new Date(booking.checkIn).toLocaleDateString() %> - <%= new
                                            Date(booking.checkOut).toLocaleDateString() %>
                                            <% } else { %>
                                                N/A
                                                <% } %>
                            </td>
                            <td>â‚¹<%= booking.totalAmount ? booking.totalAmount.toLocaleString('en-IN') : '0' %>
                            </td>
                            <td>
                                <form action="/admin/bookings/<%= booking._id %>/status?_method=PUT" method="POST"
                                    style="display: inline;">
                                    <select name="status" class="status-select" onchange="this.form.submit()">
                                        <option value="pending" <%=booking.status==='pending' ? 'selected' : '' %>
                                            >Pending</option>
                                        <option value="confirmed" <%=booking.status==='confirmed' ? 'selected' : '' %>
                                            >Confirmed</option>
                                        <option value="cancelled" <%=booking.status==='cancelled' ? 'selected' : '' %>
                                            >Cancelled</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <div class="action-btns">
                                    <form action="/admin/bookings/<%= booking._id %>?_method=DELETE" method="POST"
                                        style="display: inline;">
                                        <button type="submit" class="action-btn delete"
                                            onclick="return confirm('Are you sure you want to delete this booking?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>