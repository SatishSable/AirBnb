<% layout("layouts/boilerplate")%>

    <style>
        .bookings-page {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .bookings-header {
            margin-bottom: 2rem;
        }

        .bookings-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .bookings-header p {
            color: #717171;
        }

        .booking-tabs {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #ebebeb;
            padding-bottom: 1rem;
        }

        .tab-btn {
            padding: 0.5rem 1.5rem;
            background: #f7f7f7;
            border: none;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .tab-btn:hover,
        .tab-btn.active {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
        }

        .bookings-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .booking-card {
            display: grid;
            grid-template-columns: 200px 1fr auto;
            gap: 1.5rem;
            padding: 1.5rem;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
        }

        .booking-card:hover {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            transform: translateY(-2px);
            color: inherit;
        }

        .booking-image {
            width: 200px;
            height: 150px;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
        }

        .booking-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .booking-type-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            padding: 0.25rem 0.75rem;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .booking-details h3 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .booking-location {
            color: #717171;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .booking-dates {
            display: flex;
            gap: 2rem;
            margin-bottom: 0.75rem;
        }

        .date-item {
            display: flex;
            flex-direction: column;
        }

        .date-label {
            font-size: 0.75rem;
            color: #717171;
            text-transform: uppercase;
        }

        .date-value {
            font-weight: 600;
        }

        .booking-meta {
            display: flex;
            gap: 1.5rem;
            font-size: 0.875rem;
            color: #717171;
        }

        .booking-status {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            justify-content: space-between;
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: capitalize;
        }

        .status-badge.confirmed {
            background: #E6FAF8;
            color: #00A699;
        }

        .status-badge.pending {
            background: #FFF3CD;
            color: #856404;
        }

        .status-badge.cancelled {
            background: #FFE4E8;
            color: #FF385C;
        }

        .status-badge.completed {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .booking-price {
            font-size: 1.25rem;
            font-weight: 700;
        }

        .empty-bookings {
            text-align: center;
            padding: 4rem 2rem;
            background: #f7f7f7;
            border-radius: 16px;
        }

        .empty-bookings i {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 1rem;
        }

        .empty-bookings h3 {
            margin-bottom: 0.5rem;
            color: #222;
        }

        .empty-bookings p {
            color: #717171;
            margin-bottom: 1.5rem;
        }

        .explore-btn {
            display: inline-block;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .explore-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(255, 56, 92, 0.3);
            color: white;
        }

        @media (max-width: 768px) {
            .booking-card {
                grid-template-columns: 1fr;
            }

            .booking-image {
                width: 100%;
                height: 200px;
            }

            .booking-status {
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
            }
        }
    </style>

    <div class="bookings-page">
        <div class="bookings-header">
            <h1>üóìÔ∏è My Bookings</h1>
            <p>View and manage your trips, rentals, and reservations</p>
        </div>

        <% if(bookings && bookings.length> 0) { %>
            <div class="bookings-list">
                <% bookings.forEach(booking=> { %>
                    <% // Determine the item details based on booking type let item, itemUrl, typeLabel, typeIcon,
                        defaultImage; if(booking.bookingType==='vehicle' && booking.vehicle) { item=booking.vehicle;
                        itemUrl=`/vehicles/${item._id}`; typeLabel='Vehicle Rental' ; typeIcon='üèçÔ∏è' ;
                        defaultImage='https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=400' ; } else
                        if(booking.bookingType==='dhaba' && booking.dhaba) { item=booking.dhaba;
                        itemUrl=`/dhabas/${item._id}`; typeLabel='Restaurant' ; typeIcon='üçõ' ;
                        defaultImage='https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=400' ; } else
                        if(booking.listing) { item=booking.listing; itemUrl=`/listings/${item._id}`; typeLabel='Stay' ;
                        typeIcon='üè†' ;
                        defaultImage='https://images.unsplash.com/photo-1566073771259-6a8506099945?w=400' ; } else {
                        item=null; } %>

                        <% if(item) { %>
                            <a href="/bookings/<%= booking._id %>" class="booking-card">
                                <div class="booking-image">
                                    <span class="booking-type-badge">
                                        <%= typeIcon %>
                                            <%= typeLabel %>
                                    </span>
                                    <img src="<%= item.image && item.image.url ? item.image.url : defaultImage %>"
                                        alt="<%= item.title %>">
                                </div>

                                <div class="booking-details">
                                    <h3>
                                        <%= item.title %>
                                    </h3>
                                    <p class="booking-location">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <%= item.location %>
                                            <%= item.country ? ', ' + item.country : '' %>
                                    </p>

                                    <div class="booking-dates">
                                        <div class="date-item">
                                            <span class="date-label">
                                                <%= booking.bookingType==='dhaba' ? 'Date' : 'Check-in' %>
                                            </span>
                                            <span class="date-value">
                                                <%= new Date(booking.checkIn).toLocaleDateString('en-IN', {
                                                    day: 'numeric' , month: 'short' , year: 'numeric' }) %>
                                            </span>
                                        </div>
                                        <% if(booking.bookingType !=='dhaba' ) { %>
                                            <div class="date-item">
                                                <span class="date-label">Check-out</span>
                                                <span class="date-value">
                                                    <%= new Date(booking.checkOut).toLocaleDateString('en-IN', {
                                                        day: 'numeric' , month: 'short' , year: 'numeric' }) %>
                                                </span>
                                            </div>
                                            <% } %>
                                                <% if(booking.reservationTime) { %>
                                                    <div class="date-item">
                                                        <span class="date-label">Time</span>
                                                        <span class="date-value">
                                                            <%= booking.reservationTime %>
                                                        </span>
                                                    </div>
                                                    <% } %>
                                    </div>

                                    <div class="booking-meta">
                                        <span><i class="fas fa-users"></i>
                                            <%= booking.guests %> guest<%= booking.guests> 1 ? 's' : '' %>
                                        </span>
                                        <% if(booking.bookingType !=='dhaba' ) { %>
                                            <span><i class="fas fa-moon"></i>
                                                <%= Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) /
                                                    (1000 * 60 * 60 * 24)) %>
                                                    <%= booking.bookingType==='vehicle' ? 'days' : 'nights' %>
                                            </span>
                                            <% } %>
                                    </div>
                                </div>

                                <div class="booking-status">
                                    <span class="status-badge <%= booking.status %>">
                                        <%= booking.status %>
                                    </span>
                                    <span class="booking-price">‚Çπ<%= booking.totalPrice.toLocaleString('en-IN') %>
                                            </span>
                                </div>
                            </a>
                            <% } %>
                                <% }); %>
            </div>
            <% } else { %>
                <div class="empty-bookings">
                    <i class="fas fa-calendar-alt"></i>
                    <h3>No bookings yet</h3>
                    <p>Start exploring amazing places and book your first trip!</p>
                    <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                        <a href="/listings" class="explore-btn">üè† Explore Stays</a>
                        <a href="/vehicles" class="explore-btn"
                            style="background: linear-gradient(135deg, #667eea, #764ba2);">üèçÔ∏è Rent Vehicles</a>
                        <a href="/dhabas" class="explore-btn"
                            style="background: linear-gradient(135deg, #FF9800, #F44336);">üçõ Find Dhabas</a>
                    </div>
                </div>
                <% } %>
    </div>