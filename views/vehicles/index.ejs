<script>
    // Wishlist Functionality
    function toggleWishlist(vehicleId, btn) {
        const icon = btn.querySelector('i');

        if (icon.classList.contains('far')) {
            icon.classList.remove('far');
            icon.classList.add('fas');
            btn.classList.add('active');

            let wishlist = JSON.parse(localStorage.getItem('vehicleWishlist') || '[]');
            if (!wishlist.includes(vehicleId)) {
                wishlist.push(vehicleId);
                localStorage.setItem('vehicleWishlist', JSON.stringify(wishlist));
            }
        } else {
            icon.classList.remove('fas');
            icon.classList.add('far');
            btn.classList.remove('active');

            let wishlist = JSON.parse(localStorage.getItem('vehicleWishlist') || '[]');
            wishlist = wishlist.filter(id => id !== vehicleId);
            localStorage.setItem('vehicleWishlist', JSON.stringify(wishlist));
        }
    }

    // Load wishlist on page load
    document.addEventListener('DOMContentLoaded', function() {
        const wishlist = JSON.parse(localStorage.getItem('vehicleWishlist') || '[]');

        wishlist.forEach(vehicleId => {
            const card = document.querySelector(`a[href="/vehicles/${vehicleId}"]`);
            if (card) {
                const btn = card.querySelector('.vehicle-card__wishlist');
                if (btn) {
                    const icon = btn.querySelector('i');
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                    btn.classList.add('active');
                }
            }
        });

        // Fade-in animation for cards
        const vehicleCards = document.querySelectorAll('.vehicle-card');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        vehicleCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = `all 0.5s ease ${index * 0.1}s`;
            observer.observe(card);
        });
    });
</script>
