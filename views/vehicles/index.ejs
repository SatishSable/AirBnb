    <style>
        /* Hero Section */
        .vehicles-hero {
            position: relative;
            width: 100vw;
            height: 100vh;
            margin-left: calc(-50vw + 50%);
            margin-top: -1rem;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        }

        .vehicles-hero video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            transform: translate(-50%, -50%);
            object-fit: cover;
            z-index: 0;
            filter: brightness(0.7) contrast(1.05);
        }

        .vehicles-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(180deg, 
                rgba(0, 0, 0, 0.3) 0%,
                rgba(0, 0, 0, 0.1) 40%,
                rgba(0, 0, 0, 0.5) 100%
            );
            z-index: 1;
        }

        .vehicles-hero-content {
            position: relative;
            z-index: 2;
            max-width: 1000px;
            padding: 0 2rem;
            animation: luxuryFadeIn 1.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @keyframes luxuryFadeIn {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .vehicles-hero h1 {
            font-family: 'Playfair Display', serif;
            font-size: clamp(2.5rem, 6vw, 5rem);
            font-weight: 400;
            font-style: italic;
            margin-bottom: 1.5rem;
            color: #FFFFFF;
            line-height: 1.1;
            letter-spacing: 0.02em;
        }

        .vehicles-hero p {
            font-family: 'Cormorant Garamond', serif;
            font-size: clamp(1.1rem, 2vw, 1.5rem);
            font-weight: 300;
            opacity: 0.9;
            margin-bottom: 3rem;
            color: rgba(255, 255, 255, 0.95);
            letter-spacing: 0.05em;
            line-height: 1.6;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .hero-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 2.5rem;
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.2em;
            text-transform: uppercase;
            text-decoration: none;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .vehicles-hero-content a.hero-btn.primary:hover {
            background: white !important;
            color: #1a1a2e !important;
            border-color: white !important;
        }

        .hero-btn.primary {
            background: transparent;
            color: white !important;
            border: 1px solid rgba(255, 255, 255, 0.6);
        }

        .vehicles-hero-content a.hero-btn.secondary:hover {
            background: white !important;
            color: #1a1a2e !important;
            border-color: white !important;
        }

        .hero-btn.secondary {
            background: transparent;
            color: white !important;
            border: 1px solid rgba(255, 255, 255, 0.6);
        }

        .hero-btn i {
            font-size: 0.7rem;
            transition: transform 0.3s ease;
        }

        .hero-btn:hover i {
            transform: translateX(4px);
        }

        /* Page Content */
        .vehicles-page {
            padding: 2rem 0;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .section-header h2 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #222;
        }

        .vehicles-count {
            color: #717171;
            font-size: 0.95rem;
        }

        .filter-tabs {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .filter-tab {
            padding: 0.6rem 1.25rem;
            border: 1px solid #ddd;
            border-radius: 25px;
            text-decoration: none;
            color: #222;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.3s ease;
            background: white;
        }

        .filter-tab:hover,
        .filter-tab.active {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
            border-color: #FF385C;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 56, 92, 0.25);
        }

        .filter-tab i {
            margin-right: 0.5rem;
        }

        /* Vehicles Grid - Luxury Design */
        .vehicles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
            padding: 0 2rem 4rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .vehicle-card {
            background: white;
            border-radius: 0;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .vehicle-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .vehicle-card__image-wrapper {
            position: relative;
            overflow: hidden;
            aspect-ratio: 4/3;
        }

        .vehicle-card__image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .vehicle-card:hover .vehicle-card__image {
            transform: scale(1.08);
        }

        .vehicle-card__overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                to top,
                rgba(0, 0, 0, 0.4) 0%,
                transparent 50%
            );
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .vehicle-card:hover .vehicle-card__overlay {
            opacity: 1;
        }

        .vehicle-card__wishlist {
            position: absolute;
            top: 1rem;
            right: 1rem;
            width: 36px;
            height: 36px;
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 5;
        }

        .vehicle-card__wishlist:hover {
            transform: scale(1.1);
            background: white;
        }

        .vehicle-card__wishlist i {
            color: #666;
            font-size: 0.9rem;
            transition: color 0.3s;
        }

        .vehicle-card__wishlist.active i {
            color: #e74c3c;
        }

        .vehicle-card__badge {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background: #c9a227;
            color: white;
            padding: 0.4rem 0.8rem;
            font-family: 'Inter', sans-serif;
            font-size: 0.65rem;
            font-weight: 600;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            z-index: 5;
        }

        .vehicle-card__content {
            padding: 1.5rem;
        }

        .vehicle-card__location {
            font-family: 'Inter', sans-serif;
            font-size: 0.7rem;
            font-weight: 600;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            color: #c9a227;
            margin-bottom: 0.5rem;
        }

        .vehicle-card__title {
            font-family: 'Playfair Display', serif;
            font-size: 1.25rem;
            font-weight: 400;
            color: #1a1a1a;
            margin-bottom: 0.75rem;
            line-height: 1.3;
        }

        .vehicle-card__details {
            font-family: 'Inter', sans-serif;
            font-size: 0.85rem;
            color: #666;
            margin-bottom: 1rem;
        }

        .vehicle-card__footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .vehicle-card__price {
            font-family: 'Inter', sans-serif;
            font-size: 1rem;
            font-weight: 600;
            color: #1a1a1a;
        }

        .vehicle-card__price span {
            font-weight: 400;
            font-size: 0.85rem;
            color: #666;
        }

        .vehicle-card__rating {
            display: flex;
            align-items: center;
            gap: 0.3rem;
            font-family: 'Inter', sans-serif;
            font-size: 0.85rem;
            color: #1a1a1a;
        }

        .vehicle-card__rating i {
            color: #c9a227;
            font-size: 0.8rem;
        }

        /* Empty State */
        .empty-state {
            grid-column: 1/-1;
            text-align: center;
            padding: 5rem 2rem;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 20px;
        }

        .empty-state i {
            font-size: 5rem;
            color: #ddd;
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            color: #555;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .empty-state p {
            color: #717171;
            margin-bottom: 1.5rem;
        }

        @media (max-width: 768px) {
            .vehicles-hero h1 {
                font-size: 2rem;
            }

            .section-header {
                flex-direction: column;
                text-align: center;
            }

            .vehicles-grid {
                grid-template-columns: 1fr;
            }
        }

