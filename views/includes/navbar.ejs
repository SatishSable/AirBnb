<style>
  /* ===================================
     LUXURY NAVBAR - FOUR SEASONS STYLE
     =================================== */

  :root {
    --nav-gold: #C9A227;
    --nav-gold-light: #E8D5A3;
    --nav-dark: #1A1A1A;
  }

  .navbar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: transparent;
    border: none;
    padding: 1.5rem 3rem;
    box-shadow: none;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Solid navbar when scrolling */
  .navbar.navbar-solid {
    position: fixed;
    background: rgba(26, 26, 26, 0.97);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.15);
    padding: 1rem 3rem;
  }

  /* Transparent navbar over hero */
  .navbar.navbar-transparent {
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
  }

  /* Brand Styling - Elegant & Refined */
  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .navbar-brand:hover {
    opacity: 0.9;
  }

  .navbar-brand .fa-airbnb {
    font-size: 2rem;
    color: var(--nav-gold) !important;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  .navbar-brand .brand-text {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.4rem;
    font-weight: 500;
    font-style: italic;
    color: #FFFFFF !important;
    letter-spacing: 0.05em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  /* Navigation Links - Refined Style */
  .nav-menu {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.85) !important;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-weight: 500;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.5rem 1.25rem !important;
    transition: all 0.3s ease;
    text-decoration: none;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 1px;
    background: var(--nav-gold);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .nav-link:hover {
    color: #FFFFFF !important;
  }

  .nav-link:hover::after {
    width: 60%;
  }

  /* Search Container - Minimal Elegant */
  .search-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.5rem 0.5rem 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    min-width: 260px;
    max-width: 340px;
  }

  .search-container:hover,
  .search-container:focus-within {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.35);
  }

  .search-container input {
    border: none;
    outline: none;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.8rem;
    flex: 1;
    color: #FFFFFF;
    font-weight: 400;
    background: transparent;
    min-width: 100px;
    letter-spacing: 0.02em;
  }

  .search-container input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .search-btn {
    background: var(--nav-gold);
    color: white;
    border: none;
    width: 34px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .search-btn:hover {
    background: #D4AF37;
    transform: scale(1.05);
  }

  .search-btn i {
    font-size: 0.75rem;
  }

  /* User Menu - Elegant */
  .user-menu {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.5rem 0.35rem 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .user-menu:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.35);
  }

  .user-menu i.fa-bars {
    font-size: 0.8rem;
    color: #FFFFFF;
  }

  .user-avatar {
    width: 30px;
    height: 30px;
    background: var(--nav-gold);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-weight: 600;
    font-size: 0.75rem;
  }

  /* Premium Dropdown Menu */
  .dropdown-menu {
    border-radius: 0;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    border: none;
    padding: 0.75rem 0;
    margin-top: 0.75rem;
    background: #FFFFFF;
    overflow: hidden;
    animation: dropdownFadeIn 0.25s ease;
    min-width: 220px;
  }

  @keyframes dropdownFadeIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .dropdown-item {
    padding: 0.875rem 1.5rem;
    transition: all 0.2s ease;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.8rem;
    color: var(--nav-dark);
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .dropdown-item:hover {
    background: #f8f8f8;
    color: var(--nav-gold);
  }

  .dropdown-item i {
    width: 20px;
    color: #999;
    transition: color 0.2s ease;
  }

  .dropdown-item:hover i {
    color: var(--nav-gold);
  }

  .dropdown-divider {
    margin: 0.5rem 1rem;
    border-color: #eee;
  }

  /* Mobile Toggle */
  .navbar-toggler {
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 0.5rem 0.75rem;
  }

  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.9%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }

  /* Responsive */
  @media (max-width: 992px) {
    .search-container {
      display: none;
    }
    
    .navbar {
      padding: 1rem 1.5rem;
    }

    .navbar.navbar-solid {
      padding: 0.875rem 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      padding: 0.875rem 1rem;
    }

    .nav-menu {
      gap: 0.125rem;
    }

    .nav-link {
      padding: 0.5rem 0.75rem !important;
      font-size: 0.7rem;
    }

    .navbar-brand .brand-text {
      font-size: 1.2rem;
    }

    .navbar-brand .fa-airbnb {
      font-size: 1.75rem;
    }
  }
</style>

