<% layout("layouts/boilerplate") %>

    <style>
        .dashboard-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .dashboard-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        .dashboard-nav {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .dashboard-nav a {
            padding: 0.75rem 1.5rem;
            background: #f7f7f7;
            border-radius: 8px;
            text-decoration: none;
            color: #222;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .dashboard-nav a:hover,
        .dashboard-nav a.active {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
        }

        .bookings-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .booking-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            display: flex;
            transition: all 0.3s ease;
        }

        .booking-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .booking-image {
            width: 200px;
            min-height: 150px;
            object-fit: cover;
        }

        .booking-content {
            flex: 1;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .booking-title h3 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .booking-type {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .type-listing {
            background: #E3F2FD;
            color: #1976D2;
        }

        .type-vehicle {
            background: #E0F2F1;
            color: #00796B;
        }

        .type-dhaba {
            background: #FFF3E0;
            color: #E65100;
        }

        .booking-status {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .status-confirmed {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .status-pending {
            background: #FFF3E0;
            color: #E65100;
        }

        .status-cancelled {
            background: #FFEBEE;
            color: #C62828;
        }

        .booking-details {
            display: flex;
            gap: 2rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
        }

        .detail-label {
            font-size: 0.75rem;
            color: #717171;
            text-transform: uppercase;
            margin-bottom: 0.25rem;
        }

        .detail-value {
            font-weight: 600;
        }

        .booking-actions {
            display: flex;
            gap: 0.5rem;
        }

        .booking-actions a,
        .booking-actions button {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 500;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .action-view {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .action-cancel {
            background: #FFEBEE;
            color: #C62828;
        }

        .empty-state {
            text-align: center;
            padding: 4rem;
            color: #717171;
            background: white;
            border-radius: 16px;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .booking-card {
                flex-direction: column;
            }

            .booking-image {
                width: 100%;
                height: 180px;
            }
        }
    </style>

    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>My Bookings (<%= bookings.length %>)</h1>
        </div>

        <nav class="dashboard-nav">
            <a href="/dashboard"><i class="fas fa-home"></i> Overview</a>
            <a href="/dashboard/profile"><i class="fas fa-user"></i> Profile</a>
            <a href="/dashboard/listings"><i class="fas fa-building"></i> My Listings</a>
            <a href="/dashboard/vehicles"><i class="fas fa-car"></i> My Vehicles</a>
            <a href="/dashboard/dhabas"><i class="fas fa-utensils"></i> My Dhabas</a>
            <a href="/dashboard/bookings" class="active"><i class="fas fa-calendar-check"></i> My Bookings</a>
        </nav>

        <% if (bookings.length> 0) { %>
            <div class="bookings-list">
                <% bookings.forEach(booking=> { %>
                    <% let imgUrl='https://images.unsplash.com/photo-1566073771259-6a8506099945?w=400' ; let
                        title='Booking' ; let type='listing' ; let viewUrl='#' ; if (booking.listing) {
                        imgUrl=booking.listing.image && booking.listing.image.url ? booking.listing.image.url : imgUrl;
                        title=booking.listing.title; type='listing' ; viewUrl='/listings/' + booking.listing._id; } else
                        if (booking.vehicle) { imgUrl=booking.vehicle.image && booking.vehicle.image.url ?
                        booking.vehicle.image.url : imgUrl; title=booking.vehicle.title; type='vehicle' ;
                        viewUrl='/vehicles/' + booking.vehicle._id; } else if (booking.dhaba) {
                        imgUrl=booking.dhaba.image && booking.dhaba.image.url ? booking.dhaba.image.url : imgUrl;
                        title=booking.dhaba.title; type='dhaba' ; viewUrl='/dhabas/' + booking.dhaba._id; } %>
                        <div class="booking-card">
                            <img src="<%= imgUrl %>" alt="<%= title %>" class="booking-image">
                            <div class="booking-content">
                                <div class="booking-header">
                                    <div class="booking-title">
                                        <h3>
                                            <%= title %>
                                        </h3>
                                        <span class="booking-type type-<%= type %>">
                                            <%= type.charAt(0).toUpperCase() + type.slice(1) %>
                                        </span>
                                    </div>
                                    <span class="booking-status status-<%= booking.status || 'pending' %>">
                                        <%= booking.status ? booking.status.charAt(0).toUpperCase() +
                                            booking.status.slice(1) : 'Pending' %>
                                    </span>
                                </div>

                                <div class="booking-details">
                                    <div class="detail-item">
                                        <span class="detail-label">Check-in</span>
                                        <span class="detail-value">
                                            <%= booking.checkIn ? new Date(booking.checkIn).toLocaleDateString('en-US',
                                                { weekday: 'short' , month: 'short' , day: 'numeric' }) : 'N/A' %>
                                        </span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Check-out</span>
                                        <span class="detail-value">
                                            <%= booking.checkOut ? new
                                                Date(booking.checkOut).toLocaleDateString('en-US', { weekday: 'short' ,
                                                month: 'short' , day: 'numeric' }) : 'N/A' %>
                                        </span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Guests</span>
                                        <span class="detail-value">
                                            <%= booking.guests || 1 %>
                                        </span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Total</span>
                                        <span class="detail-value">â‚¹<%= booking.totalAmount ?
                                                booking.totalAmount.toLocaleString('en-IN') : '0' %></span>
                                    </div>
                                </div>

                                <div class="booking-actions">
                                    <a href="<%= viewUrl %>" class="action-view"><i class="fas fa-eye"></i> View
                                        Details</a>
                                    <% if (booking.status !=='cancelled' ) { %>
                                        <form action="/dashboard/bookings/<%= booking._id %>/cancel?_method=PUT"
                                            method="POST" style="margin: 0;">
                                            <button type="submit" class="action-cancel"
                                                onclick="return confirm('Are you sure you want to cancel this booking?');">
                                                <i class="fas fa-times"></i> Cancel Booking
                                            </button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
            </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-calendar-check"></i>
                    <h3>No Bookings Yet</h3>
                    <p>You haven't made any bookings yet. Start exploring!</p>
                    <a href="/listings"
                        style="display: inline-flex; margin-top: 1rem; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #FF385C, #E31C5F); color: white; text-decoration: none; border-radius: 8px; font-weight: 500;">
                        <i class="fas fa-search"></i>&nbsp; Browse Listings
                    </a>
                </div>
                <% } %>
    </div>