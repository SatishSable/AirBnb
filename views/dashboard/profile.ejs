<% layout("layouts/boilerplate") %>

    <style>
        .dashboard-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .dashboard-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        .dashboard-nav {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .dashboard-nav a {
            padding: 0.75rem 1.5rem;
            background: #f7f7f7;
            border-radius: 8px;
            text-decoration: none;
            color: #222;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .dashboard-nav a:hover,
        .dashboard-nav a.active {
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
        }

        .profile-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 2rem;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #ebebeb;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 2.5rem;
        }

        .profile-info h2 {
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }

        .profile-info p {
            color: #717171;
            margin: 0;
        }

        .profile-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .badge-admin {
            background: #FFE4E8;
            color: #FF385C;
        }

        .badge-user {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #222;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
        }

        .form-group input:focus {
            outline: none;
            border-color: #FF385C;
            box-shadow: 0 0 0 3px rgba(255, 56, 92, 0.1);
        }

        .form-group input:disabled {
            background: #f7f7f7;
            color: #717171;
        }

        .submit-btn {
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #FF385C, #E31C5F);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(255, 56, 92, 0.3);
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid #ebebeb;
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            color: #717171;
        }

        .info-value {
            font-weight: 600;
        }
    </style>

    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>My Profile</h1>
        </div>

        <nav class="dashboard-nav">
            <a href="/dashboard"><i class="fas fa-home"></i> Overview</a>
            <a href="/dashboard/profile" class="active"><i class="fas fa-user"></i> Profile</a>
            <a href="/dashboard/listings"><i class="fas fa-building"></i> My Listings</a>
            <a href="/dashboard/vehicles"><i class="fas fa-car"></i> My Vehicles</a>
            <a href="/dashboard/dhabas"><i class="fas fa-utensils"></i> My Dhabas</a>
            <a href="/dashboard/bookings"><i class="fas fa-calendar-check"></i> My Bookings</a>
        </nav>

        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-avatar">
                    <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div class="profile-info">
                    <h2>
                        <%= user.username %>
                    </h2>
                    <p>
                        <%= user.email %>
                    </p>
                    <span class="profile-badge badge-<%= user.role %>">
                        <%= user.role %>
                    </span>
                </div>
            </div>

            <h3 style="margin-bottom: 1.5rem;">Account Information</h3>

            <div class="info-row">
                <span class="info-label">Username</span>
                <span class="info-value">
                    <%= user.username %>
                </span>
            </div>
            <div class="info-row">
                <span class="info-label">Account Type</span>
                <span class="info-value" style="text-transform: capitalize;">
                    <%= user.role %>
                </span>
            </div>
            <div class="info-row">
                <span class="info-label">Member Since</span>
                <span class="info-value">
                    <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric' ,
                        month: 'long' , day: 'numeric' }) : 'N/A' %>
                </span>
            </div>

            <h3 style="margin: 2rem 0 1.5rem;">Update Email</h3>

            <form action="/dashboard/profile?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" name="email" id="email" value="<%= user.email %>" required>
                </div>

                <button type="submit" class="submit-btn">Update Profile</button>
            </form>
        </div>
    </div>